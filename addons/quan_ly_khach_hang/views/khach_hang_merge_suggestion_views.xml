<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_khach_hang_merge_suggestion_tree" model="ir.ui.view">
        <field name="name">khach_hang_merge_suggestion.tree</field>
        <field name="model">khach_hang_merge_suggestion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="primary_khach_hang_id"/>
                <field name="duplicate_khach_hang_id"/>
                <field name="reason"/>
                <field name="match_value"/>
                <field name="state"/>
                <button name="action_apply" type="object" string="Áp dụng" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                <button name="action_reject" type="object" string="Bỏ qua" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
            </tree>
        </field>
    </record>

    <record id="view_khach_hang_merge_suggestion_form" model="ir.ui.view">
        <field name="name">khach_hang_merge_suggestion.form</field>
        <field name="model">khach_hang_merge_suggestion</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_apply" type="object" string="Áp dụng" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_reject" type="object" string="Bỏ qua" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,applied,rejected"/>
                </header>
                <sheet>
                    <group>
                        <field name="primary_khach_hang_id"/>
                        <field name="duplicate_khach_hang_id"/>
                        <field name="reason"/>
                        <field name="match_value"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_khach_hang_merge_suggestion" model="ir.actions.act_window">
        <field name="name">Đề xuất gộp khách hàng</field>
        <field name="res_model">khach_hang_merge_suggestion</field>
        <field name="view_mode">tree,form</field>
        <field name="groups_id" eval="[(4, ref('quan_ly_khach_hang.group_khach_hang_manager'))]"/>
    </record>

    <menuitem id="menu_khach_hang_merge_suggestion"
              name="Đề xuất gộp"
              parent="menu_quan_ly_khach_hang_root"
              action="action_khach_hang_merge_suggestion"
              sequence="98"
              groups="quan_ly_khach_hang.group_khach_hang_manager"/>
</odoo>
