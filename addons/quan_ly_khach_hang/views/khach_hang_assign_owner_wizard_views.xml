<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_khach_hang_assign_owner_wizard_form" model="ir.ui.view">
        <field name="name">khach_hang_assign_owner_wizard.form</field>
        <field name="model">khach_hang_assign_owner_wizard</field>
        <field name="arch" type="xml">
            <form string="Phân công nhanh khách hàng">
                <group>
                    <field name="selected_count"/>
                    <field name="nhan_vien_id"/>
                    <field name="overwrite_existing"/>
                </group>
                <footer>
                    <button name="action_assign_owner" type="object" string="Áp dụng" class="oe_highlight"/>
                    <button string="Hủy" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_khach_hang_assign_owner_wizard" model="ir.actions.act_window">
        <field name="name">Phân công phụ trách (hàng loạt)</field>
        <field name="res_model">khach_hang_assign_owner_wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="groups_id" eval="[(4, ref('quan_ly_khach_hang.group_khach_hang_manager'))]"/>
        <field name="binding_model_id" ref="model_khach_hang"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
