<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_khach_hang_daily_manager_digest" model="ir.cron">
            <field name="name">Khách hàng - gửi báo cáo ngày cho Manager</field>
            <field name="model_id" ref="model_khach_hang_dashboard"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_daily_manager_digest()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <record id="ir_cron_khach_hang_escalate_critical_overdue" model="ir.cron">
            <field name="name">Khách hàng - escalation follow-up quá hạn nặng</field>
            <field name="model_id" ref="model_khach_hang_tuong_tac"/>
            <field name="state">code</field>
            <field name="code">model._cron_escalate_critical_overdue_followups()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <record id="ir_cron_khach_hang_alert_merge_backlog" model="ir.cron">
            <field name="name">Khách hàng - cảnh báo backlog đề xuất gộp</field>
            <field name="model_id" ref="model_khach_hang_dashboard"/>
            <field name="state">code</field>
            <field name="code">model._cron_alert_merge_backlog()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
